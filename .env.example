# PathAnalyze Configuration

# MCP Server
PATHANALYZE_MCP_BASE_URL=http://127.0.0.1:9000
PATHANALYZE_MCP_SSE_ENDPOINT=/sse
PATHANALYZE_MCP_TIMEOUT=30
PATHANALYZE_MCP_RECONNECT_ATTEMPTS=3
PATHANALYZE_MCP_RECONNECT_DELAY=1.0

# FastAPI Server
PATHANALYZE_API_HOST=127.0.0.1
PATHANALYZE_API_PORT=8000
PATHANALYZE_API_RELOAD=false

# Logging
PATHANALYZE_LOG_LEVEL=INFO
PATHANALYZE_LOG_FORMAT=json

# LangGraph (for future use)
PATHANALYZE_OPENAI_API_KEY=
PATHANALYZE_LANGSMITH_API_KEY=

# Test Data (user will provide actual paths)
TEST_SLIDE_PATH=/path/to/test/slide.svs
TEST_POLYGON_PATH=/path/to/test/cells.pb
